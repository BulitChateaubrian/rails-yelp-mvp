<div class="container">
<h1>New Review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATING  %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
</div>

<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
